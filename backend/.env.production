NODE_ENV=production

DATABASE_URL=postgresql://username:password@localhost:5432/product_explorer_prod
DATABASE_SSL=true
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30000

REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

SESSION_SECRET=your-super-secure-session-secret-key-here
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

RATE_LIMIT_MAX=100
SLOW_DOWN_DELAY_AFTER=50

LOG_LEVEL=info
LOG_FILE_PATH=/var/log/product-explorer

SCRAPING_USER_AGENT=ProductExplorer/1.0 (+https://yourdomain.com/bot)
SCRAPING_DELAY_MS=2000

SENTRY_DSN=your-sentry-dsn-here
METRICS_ENABLED=true

CACHE_TTL=3600
QUERY_TIMEOUT=30000

PORT=3001
HOST=0.0.0.0
API_VERSION=v1